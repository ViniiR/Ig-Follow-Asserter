{
    "manifest_version": 3,
    "name": "Ig Follow Asserter",
    "version": "0.1",

    "description": "Shows instagram users who don't follow you back",

    "icons": {
        "16": "igfa.svg",
        "24": "igfa.svg",
        "32": "igfa.svg",
        "48": "igfa.svg",
        "64": "igfa.svg",
        "96": "igfa.svg"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "igfa.svg",
            "24": "igfa.svg",
            "32": "igfa.svg",
            "48": "igfa.svg",
            "64": "igfa.svg",
            "96": "igfa.svg"
        }
    },
    "permissions": ["scripting", "tabs"],
    "browser_specific_settings": {
        "gecko": {
            "id": "none@igfa.none"
        }
    },

    "content_scripts": [
        {
            "matches": ["*://*.instagram.com/*", "<all_urls>"],
            "js": ["run-script.js"],
            "css": ["content.css"]
        }
    ]
}
